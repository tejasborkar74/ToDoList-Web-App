<%- include("header") -%>

    <div class="box" , id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <ul>

        <%listArray.forEach(function(item){%>

          <form action="/delete" method="post">
            <div class="item">
              <input name="checkbox" type="checkbox" value= "<%=item._id%>" onchange="this.form.submit()">
              <p><%= item.name %></p>
            </div>
          </form>


        <%});%>

      </ul>

      <form class="item" action="/" method="post">

        <input type="text" name="newItem" value="" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button" value = <%= listTitle %> >+</button>

      </form>
    </div>
<%- include("footer") -%>
